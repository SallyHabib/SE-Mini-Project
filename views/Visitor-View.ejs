<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Students</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    <style media="screen">
        * {
            font-family: Montserrat, "Helvetica Neue", Helvetica, Arial, sans-serif;
            font-weight: bolder;
        }

        .row {
            margin: 0;
        }

        .navbar-default {
            height: 100px;
            padding-top: 23px;
            padding-left: 70px;
            border: 0;
            border-radius: 0 !important;
            background: #200000;
        }

        .navbar-default .navbar-brand {
            text-transform: lowercase;
            font-size:7em;
            text-decoration: none;
            color: pink;
            transition: color 0.3s ease;
            cursor: pointer;
        }

        .navbar-default .navbar-brand:hover {
            color: #18bc9c;
            transition: color 0.3s ease;
        }

        .card {
            padding: 10px;
            padding-top: 20px;
            background: #18b00c;
            border: 1px #c8c3ff solid;
            border-radius: 5px;
            text-align: center;
            margin: 10px 3% 1% 3%;
            height: 400px;
            width: calc(80% * (1/3));
        }

        .card .card-UserName {
            color: #02695e;
            font-size: 2em;
            font-weight: bold;
            text-transform: capitalize;
        }

        .card .card-Password {
            margin-top: 40px;
            font-size: 1.1em;
            
            width: 90%;
            border: 2px solid white;
            color: white;
            background: transparent;
            transition: background-color 0.5s ease;
        }

        .card .card-UserName:hover {
            color: #18bc9c;
            background: white;
            transition: background-color 0.5s ease;
        }

        .form-container {
            height: 400px;
            border-left: 1px solid gray;
            padding-left: 30px;
        }

        .form-control {
            width: 90%;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/home">View all Projects</a>
            </div>
        </div>
    </nav>
    <div class="row">
        <div class="col-xs-12 col-md-8">
            <div class="row">
                <% for(var i=0; i<userTables.length; i++){%>
                <% for(var j=0;j<Tables.length;j++){%>
                    <%if (userTables[i].UserName==Tables[j].userName) { %>
                      <div class="card col-xs-4">
                     <h4 class="card-title"> userName: <%= Tables[j].userName %></h4>
                    <h4 class="card-title"> Full Name: <%= userTables[i].Name %></h4>
                      <h4 class="card-title"> code: <%= Tables[j].code %></h4>
                          <h4 class="card-title"> URL: <%= Tables[j].URL %></h4>
                        <img src="<%= userTables[i].img %>" alt="sally.png" style="width:150px;height:150px;">
                        
                    </div>
                    
<% } %>
                   
                    
                    
                    
                    
                    
                    <%} %>
                   
                <% } %>
            </div>
        </div>
        <div class="col-xs-12 col-md-4">
            <div class="form-container">
            </div>
        </div>
    </div>

</html>